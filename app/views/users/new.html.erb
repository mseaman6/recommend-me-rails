<h3>Sign Up</h3>

<%= form_for @user do |f| %>
<!-- validation does not appear to work here, likely because of passwords, to check -->
  <label>Name:</label>
  <%= f.text_field :'name' %>
  <label>Email:</label>
  <%= f.text_field :'email' %>
  <label>Password:</label>
  <%= f.password_field :'password' %>
  <label>Password Confirmation:</label>
  <%= f.password_field :'password_confirmation' %>

  <%= f.submit "Sign Up" %>
<% end %>
