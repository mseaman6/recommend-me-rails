<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Custom Style -->
    <%= stylesheet_link_tag "application" , media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <title>RecommendMe</title>
  </head>
  <body>
    <div class="container light-fade">

      <div class="row">
        <div class="col-sm-12">
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/recommendations"><b>Our</b> Recommendations</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <!-- <li class="nav-item active"> -->
              <% if current_user %>
                <li class="nav-item">
                  <%= link_to("My Recommendations", user_path(current_user), :class => "nav-link") %>
                </li>
              <% end %>
                <li class="nav-item">
                  <%= link_to("Categories", categories_path, :class => "nav-link") %>
                </li>
                <li class="nav-item">
                  <%= link_to("Create a Recommendation", new_recommendation_path, :class => "nav-link") %>
                </li>

              </ul>

              <div class="form-inline my-2 my-lg-0">
                <div class="nav-item active">
                  <%= link_to("Logout", logout_path(authenticity_token: form_authenticity_token), method: :delete, :class => "nav-link") %>
                </div>
            </div>
          </nav>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-sm-12">
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: name %>
          <% end -%>

          <%= yield %>
        </div>
      </div>

      <br>
      <div class="row">
        <div class="col-sm-12">
          <p>&copy; 2018 MoNiCaLs Creations.  All Rights Reserved.</p>
        </div>
      </div>
    </div>

  </body>
</html>
